{
  "manifest_version": 3,
  "name": "Fuhgeddaboudit: Avoid AI & GPT news!",
  "version": "0.1.3",
  "author": "Anand Desai",
  "description": "Tired of reading about AI and ChatGPT on every webpage you visit? Well it's time to Fuhgeddaboudit!",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "128": "icons/128.png"
    },
    "default_title": "Toggle Fuhgeddaboudit!"
  }
}